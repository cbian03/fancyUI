{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    //compile to ES5
    "target": "ES5",
    //allow d.ts for autocomplete
    "declaration": true,
    "jsx": "react",
    //find package in node modules
    //not in relative path
    "moduleResolution": "Node",
    //allow default import
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
